@{
    ViewData["Title"] = "Search Movies";
}


<div class="container" style="display: flex; justify-content: center; align-items: center; height: 100vh">
    <form method="get" asp-controller="Movies" asp-action="MovieResult">
        <div class="row justify-content-center">
            <h4>@ViewData["Title"]</h4>
        </div>
        <div class="row justify-content-center">
            <label class="control-label mr-1" for="s">Title:</label>
            <input type="text" id="s" name="s" class="input-small" style="width: 40%;">
            <label class="control-label mr-1 ml-2" for="y">Year:</label>
            <input type="text" id="y" name="y" class="input-small" style="width: 20%;">
            <input class="ml-2" type="submit" value="Search" />
        </div>
    </form>
</div>

