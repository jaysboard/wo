@model Movies.Web.Models.Movies.Details
<div class="col-lg-3 col-md-4 col-sm-6">
    <article class="card">
        <header class="title-header">
            <h3>@Model.Title</h3>
        </header>
        <div class="card-block">
            <div class="img-card">
                <img src="@Model.Poster" alt="Movie" class="w-100">
            </div>
            <p class="tagline card-text text-xs-center">@Model.Year</p>
            <p class="tagline card-text text-xs-center">@Model.Plot</p>
        </div>
    </article>
</div>